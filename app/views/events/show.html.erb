<%= link_to("<< Spat na zoznam podujati", {:action => :index}) %>

<div class="row">
  <div class="col-md-6">
    <h1><%= @event.name %></h1>
    <%= @event.date.strftime('%d.%m.%Y') %><br>
    <%= @event.city %><br>
    <%= @event.type.nil?  ? 'Nespecifikovane' : @event.type.name %><br>
    <small><%= @event.description %></small>

  </div>
  <div class="col-md-6">
    <%= image_tag("http://maps.googleapis.com/maps/api/staticmap?size=400x300&maptype=roadmap&sensor=false&zoom=15&markers=#{
    @event.latitude},#{@event.longitude}") %>
  </div>

</div>

