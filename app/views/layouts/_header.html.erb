<!-- Language and login-->
<div class="mainmenu-wrapper">
  <div class="container">
    <div class="menuextras">
      <div class="extras">
        <ul>
          <li>
            <div class="dropdown choose-country">
              <a class="#" data-toggle="dropdown" href="#"> <%= image_tag("sk.png", alt: "Slovak Republic") %> SK </a>
              <ul class="dropdown-menu" role="menu">
                <li role="menuitem"><a href="#"><%= image_tag("us.png", alt: "US") %> US</a></li>
              </ul>
            </div>
          </li>

            <% if current_user %>
                <li><strong><%= current_user.name %></strong></li>
                <li><%= link_to "Odhlásiť sa", signout_path, id: "sign_out" %></li>
            <% else %>
                <li><%= link_to('Prihlásenie', {:controller => 'public', :action => 'login'}) %></li>
